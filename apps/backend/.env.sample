PSVAULT_PRIMARY.ENV="local"

PSVAULT_SERVER.PORT="8080"
PSVAULT_SERVER.READ_TIMEOUT="30"
PSVAULT_SERVER.WRITE_TIMEOUT="30"
PSVAULT_SERVER.IDLE_TIMEOUT="60"
PSVAULT_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

PSVAULT_DATABASE.HOST="localhost"
PSVAULT_DATABASE.PORT="5432"
PSVAULT_DATABASE.USER="postgres"
PSVAULT_DATABASE.PASSWORD=""
PSVAULT_DATABASE.NAME="boilerplate"
PSVAULT_DATABASE.SSL_MODE="disable"
PSVAULT_DATABASE.MAX_OPEN_CONNS="25"
PSVAULT_DATABASE.MAX_IDLE_CONNS="25"
PSVAULT_DATABASE.CONN_MAX_LIFETIME="300"
PSVAULT_DATABASE.CONN_MAX_IDLE_TIME="300"

PSVAULT_AUTH.SECRET_KEY="secret"

PSVAULT_INTEGRATION.RESEND_API_KEY="resend_key"

PSVAULT_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
PSVAULT_OBSERVABILITY.SERVICE_NAME="boilerplate"
PSVAULT_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
PSVAULT_OBSERVABILITY.LOGGING.LEVEL="debug"
PSVAULT_OBSERVABILITY.LOGGING.FORMAT="console"
PSVAULT_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
PSVAULT_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
PSVAULT_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
PSVAULT_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
PSVAULT_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
PSVAULT_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
PSVAULT_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
PSVAULT_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
PSVAULT_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"